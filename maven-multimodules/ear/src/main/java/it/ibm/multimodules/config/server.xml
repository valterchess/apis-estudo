<server description="Exemplo de Servidor liberty">

    <featureManager>
        <feature>jsp-2.3</feature>
    </featureManager>

    <!-- porta padrÃ£o Liberty para servlet | Terminal HTTP (httpEndpoint)-->
    <variable name="default.http.port" defaultValue="9080"/>
    <!-- porta padrÃ£o Liberty para servlet | Terminal HTTPS (httpEndpoint)-->
    <variable name="default.https.port" defaultValue="9443"/>

    <!-- tag::server[] -->
    <httpEndpoint
            host="*"
            httpPort="${default.http.port}"
            httpsPort="${default.https.port}" id="defaultHttpEndpoint"
    />

    <!-- tag::EARdefinition[] -->
    <enterpriseApplication
            id="maven-multimodules-ear"
            location="maven-multimodules-ear.ear"
            name="maven-multimodules-ear"
    />
    <!-- end::EARdefinition[] -->
    <!-- end::server[] -->
</server>